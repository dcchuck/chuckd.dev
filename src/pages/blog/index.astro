---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ThemeScript from '../../components/ThemeScript.astro';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Blog - Chuck Danielson</title>
		<ThemeScript />
	</head>
	<body class="min-h-dvh flex flex-col" style="background-color: var(--color-bg);">
		<Header breadcrumbs={[{ label: "blog" }]} />
		<main class="flex-1 px-8 max-w-5xl mx-auto w-full">
			<h1 class="text-2xl font-title mb-6" style="color: var(--color-fg);">Posts</h1>
			<ul class="space-y-2">
				{sortedPosts.map((post) => (
					<li class="flex justify-between items-baseline">
						<a href={`/blog/${post.id}`} class="font-mono hover:underline" style="color: var(--color-fg);">{post.data.title}</a>
						<time datetime={post.data.date.toISOString()} class="font-mono text-sm ml-4" style="color: var(--color-fg);">
							{post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
						</time>
					</li>
				))}
			</ul>
		</main>
		<Footer />
	</body>
</html>
